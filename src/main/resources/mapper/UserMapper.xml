<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.taltools.dao.UserDao">

    <select id="getQueryValue"  parameterType="Map" resultType="com.taltools.entity.UserEntity">
         SELECT * FROM `user`
         WHERE
         `name` LIKE concat('%', #{name}, '%')
    </select>
    <select id="getAll" resultType="com.taltools.entity.UserEntity">
        SELECT * FROM `user`
    </select>
</mapper>